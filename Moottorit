package motors;

import lejos.robotics.RegulatedMotor;
import lejos.hardware.port.MotorPort;
import lejos.hardware.port.TachoMotorPort;
import lejos.hardware.motor.EV3LargeRegulatedMotor;
import lejos.hardware.motor.EV3MediumRegulatedMotor;

public class Moottorit {

	private MotorPort MoottoriPortti;
	private EV3LargeRegulatedMotor VasenM;
	private EV3LargeRegulatedMotor OikeaM;
	private EV3MediumRegulatedMotor KaulaM;
	private EV3MediumRegulatedMotor PutsisM;

	public void VasenM(TachoMotorPort MoottoriPortti) {
		this.VasenM = new EV3LargeRegulatedMotor(MoottoriPortti);
	}

	public void OikeaM(TachoMotorPort MoottoriPortti) {
		this.OikeaM = new EV3LargeRegulatedMotor(MoottoriPortti);
	}

	public void KaulaM(TachoMotorPort MoottoriPortti) {
		this.KaulaM = new EV3MediumRegulatedMotor(MoottoriPortti);
	}

	public void PutsisM(TachoMotorPort MoottoriPortti) {
		this.PutsisM = new EV3MediumRegulatedMotor(MoottoriPortti);
	}

	public void suljeMoottorit() {
		VasenM.close();
		OikeaM.close();
		KaulaM.close();
		PutsisM.close();
	}
}
